<!DOCTYPE html>
<html lang="<%= lang %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= t.contact.title %> - Kaitlus</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="nav-brand">
            <a href="/">üóëÔ∏è Kaitlus</a>
        </div>
        <div class="nav-menu">
            <a href="/"><%= t.nav.home %></a>
            <a href="/order"><%= t.nav.order %></a>
            <a href="/services"><%= t.nav.services %></a>
            <a href="/sales"><%= t.nav.sales %></a>
            <a href="/contact" class="active"><%= t.nav.contact %></a>
        </div>
        <div class="nav-links">
            <%- include('partials/lang-switcher') %>
            <% if (user) { %>
                <a href="/dashboard" class="btn btn-secondary"><%= t.nav.dashboard %></a>
                <a href="/auth/logout" class="btn btn-outline"><%= t.nav.logout %></a>
            <% } else { %>
                <a href="/auth/login" class="btn btn-outline"><%= t.nav.login %></a>
                <a href="/auth/register" class="btn btn-primary"><%= t.nav.signup %></a>
            <% } %>
        </div>
    </nav>

    <div class="page-header">
        <h1><%= t.contact.title %></h1>
        <p><%= t.contact.subtitle %></p>
    </div>

    <section class="section">
        <div class="contact-grid">
            <div class="contact-info">
                <h3><%= t.contact.getInTouch %></h3>
                
                <div class="contact-item">
                    <div class="contact-icon">üìç</div>
                    <div>
                        <h4><%= t.contact.addressLabel %></h4>
                        <p>123 Industrial Street<br>00100 Helsinki, Finland</p>
                    </div>
                </div>

                <div class="contact-item">
                    <div class="contact-icon">üìû</div>
                    <div>
                        <h4><%= t.contact.phoneLabel %></h4>
                        <p>+358 12 345 6789</p>
                    </div>
                </div>

                <div class="contact-item">
                    <div class="contact-icon">‚úâÔ∏è</div>
                    <div>
                        <h4><%= t.contact.emailLabel %></h4>
                        <p>info@kaitlus.com</p>
                    </div>
                </div>

                <div class="contact-item">
                    <div class="contact-icon">üïê</div>
                    <div>
                        <h4><%= t.contact.hoursLabel %></h4>
                        <p><%= t.footer.monFri %>: 7:00 - 18:00<br><%= t.footer.saturday %>: 8:00 - 14:00<br><%= t.footer.sunday %>: <%= t.footer.closed %></p>
                    </div>
                </div>
            </div>

            <div class="form-container" style="margin: 0;">
                <h3 style="margin-bottom: 1.5rem;"><%= t.contact.sendMessage %></h3>
                
                <% if (typeof success !== 'undefined' && success) { %>
                    <div class="alert alert-success"><%= success %></div>
                <% } %>
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert alert-error"><%= error %></div>
                <% } %>

                <form action="/contact" method="POST">
                    <div class="form-row">
                        <div class="form-group">
                            <label for="name"><%= t.contact.yourName %> *</label>
                            <input type="text" id="name" name="name" required>
                        </div>
                        <div class="form-group">
                            <label for="email"><%= t.order.email %> *</label>
                            <input type="email" id="email" name="email" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="phone"><%= t.order.phone %></label>
                        <input type="tel" id="phone" name="phone">
                    </div>

                    <div class="form-group">
                        <label for="subject"><%= t.contact.subject %> *</label>
                        <select id="subject" name="subject" required>
                            <option value=""><%= t.contact.selectTopic %></option>
                            <option value="quote"><%= t.contact.quote %></option>
                            <option value="order"><%= t.contact.orderQuestion %></option>
                            <option value="sales"><%= t.contact.containerSales %></option>
                            <option value="support"><%= t.contact.customerSupport %></option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="message"><%= t.contact.message %> *</label>
                        <textarea id="message" name="message" required placeholder="<%= t.contact.messagePlaceholder %>"></textarea>
                    </div>

                    <button type="submit" class="btn btn-primary btn-large btn-full"><%= t.contact.send %></button>
                </form>
            </div>
        </div>
    </section>

    <footer class="footer">
        <div class="footer-bottom">
            <p>&copy; 2025 Kaitlus. <%= t.footer.rights %></p>
        </div>
    </footer>

    <%- include('partials/chat-widget') %>
</body>
</html>
