<!DOCTYPE html>
<html lang="<%= lang %>">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= t.order.title %> - Kaitlus</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <nav class="navbar">
        <div class="nav-brand">
            <a href="/">üóëÔ∏è Kaitlus</a>
        </div>
        <div class="nav-menu">
            <a href="/"><%= t.nav.home %></a>
            <a href="/order" class="active"><%= t.nav.order %></a>
            <a href="/services"><%= t.nav.services %></a>
            <a href="/sales"><%= t.nav.sales %></a>
            <a href="/contact"><%= t.nav.contact %></a>
        </div>
        <div class="nav-links">
            <%- include('partials/lang-switcher') %>
            <% if (user) { %>
                <a href="/dashboard" class="btn btn-secondary"><%= t.nav.dashboard %></a>
                <a href="/auth/logout" class="btn btn-outline"><%= t.nav.logout %></a>
            <% } else { %>
                <a href="/auth/login" class="btn btn-outline"><%= t.nav.login %></a>
                <a href="/auth/register" class="btn btn-primary"><%= t.nav.signup %></a>
            <% } %>
        </div>
    </nav>

    <div class="page-header">
        <h1><%= t.order.title %></h1>
        <p><%= t.order.subtitle %></p>
    </div>

    <section class="section">
        <div class="form-container">
            <% if (typeof success !== 'undefined' && success) { %>
                <div class="alert alert-success"><%= success %></div>
            <% } %>
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-error"><%= error %></div>
            <% } %>

            <h3 style="margin-bottom: 1.5rem;"><%= t.order.selectSize %></h3>
            <div class="container-sizes">
                <div class="size-option" data-size="small">
                    <h4>2m¬≥</h4>
                    <p><%= t.home.small %></p>
                    <p><strong>‚Ç¨99/<%= t.order.weeks %></strong></p>
                </div>
                <div class="size-option" data-size="medium">
                    <h4>5m¬≥</h4>
                    <p><%= t.home.medium %></p>
                    <p><strong>‚Ç¨149/<%= t.order.weeks %></strong></p>
                </div>
                <div class="size-option" data-size="large">
                    <h4>10m¬≥</h4>
                    <p><%= t.home.large %></p>
                    <p><strong>‚Ç¨249/<%= t.order.weeks %></strong></p>
                </div>
                <div class="size-option" data-size="xlarge">
                    <h4>20m¬≥</h4>
                    <p><%= t.home.extraLarge %></p>
                    <p><strong>‚Ç¨399/<%= t.order.weeks %></strong></p>
                </div>
            </div>

            <h3 style="margin: 2rem 0 1.5rem;"><%= t.order.yourDetails %></h3>
            <form action="/order" method="POST">
                <input type="hidden" name="containerSize" id="containerSize" value="medium">
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="firstName"><%= t.order.firstName %> *</label>
                        <input type="text" id="firstName" name="firstName" required>
                    </div>
                    <div class="form-group">
                        <label for="lastName"><%= t.order.lastName %> *</label>
                        <input type="text" id="lastName" name="lastName" required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="email"><%= t.order.email %> *</label>
                    <input type="email" id="email" name="email" required>
                </div>

                <div class="form-group">
                    <label for="phone"><%= t.order.phone %> *</label>
                    <input type="tel" id="phone" name="phone" required>
                </div>

                <div class="form-group">
                    <label for="address"><%= t.order.address %> *</label>
                    <input type="text" id="address" name="address" required>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="city"><%= t.order.city %> *</label>
                        <input type="text" id="city" name="city" required>
                    </div>
                    <div class="form-group">
                        <label for="postalCode"><%= t.order.postalCode %> *</label>
                        <input type="text" id="postalCode" name="postalCode" required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="deliveryDate"><%= t.order.deliveryDate %> *</label>
                        <input type="date" id="deliveryDate" name="deliveryDate" required>
                    </div>
                    <div class="form-group">
                        <label for="rentalDuration"><%= t.order.rentalDuration %> *</label>
                        <select id="rentalDuration" name="rentalDuration" required>
                            <option value="1">1 <%= t.order.weeks %></option>
                            <option value="2">2 <%= t.order.weeks %></option>
                            <option value="3">3 <%= t.order.weeks %></option>
                            <option value="4">4 <%= t.order.weeks %></option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label for="wasteType"><%= t.order.wasteType %></label>
                    <select id="wasteType" name="wasteType">
                        <option value="mixed"><%= t.order.mixed %></option>
                        <option value="construction"><%= t.order.construction %></option>
                        <option value="garden"><%= t.order.garden %></option>
                        <option value="furniture"><%= t.order.furniture %></option>
                        <option value="other"><%= t.order.other %></option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="notes"><%= t.order.notes %></label>
                    <textarea id="notes" name="notes" placeholder="<%= t.order.notesPlaceholder %>"></textarea>
                </div>

                <button type="submit" class="btn btn-success btn-large btn-full"><%= t.order.submit %></button>
            </form>
        </div>
    </section>

    <footer class="footer">
        <div class="footer-bottom">
            <p>&copy; 2025 Kaitlus. <%= t.footer.rights %></p>
        </div>
    </footer>

    <%- include('partials/chat-widget') %>

    <script>
        // Container size selection
        document.querySelectorAll('.size-option').forEach(option => {
            option.addEventListener('click', function() {
                document.querySelectorAll('.size-option').forEach(o => o.classList.remove('selected'));
                this.classList.add('selected');
                document.getElementById('containerSize').value = this.dataset.size;
            });
        });
        // Default selection
        document.querySelector('.size-option[data-size="medium"]').classList.add('selected');
        
        // Set minimum date to today
        document.getElementById('deliveryDate').min = new Date().toISOString().split('T')[0];
    </script>
</body>
</html>
